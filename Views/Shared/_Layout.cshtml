                                                        <form style="margin: 0;" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                                                            <button style="padding: 0; height: 34px; text-transform: lowercase; display: flex; align-items: center; justify-content: center;  width: 100%;" type="submit" class="m-0 nav-link btn btn-link text-dark">
                                                                Đăng xuất
