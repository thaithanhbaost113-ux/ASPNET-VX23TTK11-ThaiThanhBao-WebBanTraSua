                                    }
                                }
                                else
                                {
                                    <a style="margin-right: 15px;" asp-area="Identity" asp-page="/Account/Login">
                                        <span>Account</span> <i class="fa-solid fa-user"></i>
                                    </a>
                                }
                                
                            </a>
                            <a asp-area="" asp-controller="Cart" asp-action="ShowCart" class="cart for-buy">
