@model IEnumerable<Project.Areas.Identity.Data.ProductCategory>

@{
    Layout = "_DashboardLayout";
}

<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table td {
        font-size: 20px;
    }

    .table tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-sm {
        padding: 5px 10px;
        font-size: 12px;
    }

    .btn {
        transition: background-color 0.3s ease;
    }

    .btn:hover {
        opacity: 0.8;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-warning {
        background-color: #ffc107;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn-info {
        background-color: #17a2b8;
    }

    .btn-info:hover {
        background-color: #138496;
    }

    .container {
        max-width: 1200px;
    }

    h1 {
        font-size: 28px;
        color: #333;
    }

    .mb-3 {
        margin-bottom: 15px;
    }

    .product-category-container {
        display: flex;
        justify-content: space-between;
    }

    .category-info {
        flex: 1;
        margin-right: 10px;
    }

    .actions {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-danger {
        background-color: #dc3545;
    }
</style>

<div class="container mt-4">
    <a asp-action="CreateProductCategory" class="btn btn-primary mb-3">Thêm thể loại</a>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Tên</th>
                <th>Trạng thái</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        @if (item.Status)
                        {
                            <span class="badge badge-success">Bật</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Tắt</span>
                        }
                    </td>
                    <td class="text-center">
                        <a asp-action="EditProductCategory" asp-route-id="@item.Id" style="background: #e1b42d" class="btn btn-sm">Sửa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
