@model List<Project.Areas.Identity.Data.Product>
@{
    Layout = "_DashboardLayout";
}

<style>
    td:last-child {
        text-align: center;
    }

    .product-image {
        width: 50px;
        height: 70px;
        object-fit: cover;
    }

    .btn-action {
        height: 35px;
        margin: 5px;
        padding: 5px 10px;
        display: inline-flex;
        justify-content: center;
        align-items: center;
    }

        .btn-action a {
            color: white;
            text-decoration: none;
        }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .status-in-stock {
        background-color: #28a745;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .status-out-of-stock {
        background-color: #dc3545;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
    }

    .btn-xs {
        padding: 5px 10px;
    }

    .modal-header {
        background-color: #f8f9fa;
    }

    .modal-content {
        border-radius: 10px;
    }

    /* Hover effect for action buttons */
    .btn:hover {
        opacity: 0.8;
    }

    /* Custom styles for buttons */
    .btn-group {
        display: flex;
        justify-content: space-around;
        width: 100%;
    }

        .btn-group button {
            flex: 1;
            margin: 0 5px;
        }

    /* Styling for pagination */
    .pagination {
        display: flex;
        justify-content: center;
        padding: 20px 0;
        list-style: none;
        margin: 0;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a {
                display: inline-block;
                padding: 10px 15px;
                background-color: #f0f0f0;
                border: 1px solid #ddd;
                color: #333;
                text-decoration: none;
                border-radius: 4px;
                transition: background-color 0.3s, color 0.3s;
            }

                .pagination li a:hover {
                    background-color: #007bff;
                    color: white;
                }

            .pagination li.active a {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }

            .pagination li.disabled a {
                background-color: #e9ecef;
                color: #6c757d;
                border-color: #ddd;
                pointer-events: none;
            }
</style>

<div class="container">
    <a method="get" class="mb-3 btn btn-primary d-flex flex-column align-items-center justify-content-center"
       style="width: 200px"
       asp-controller="Admin"
       asp-action="AddProduct"
       asp-route-idItem=""
       id="showMessageBtn">
        <p class="mb-0">Thêm sản phẩm</p>
    </a>

    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Tên</th>
                <th>Hình ảnh</th>
                <th>Giá</th>
                <th>Loại sản phẩm</th>
                <th>Số lượng bán</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NameProduct</td>
                    <td><img src="@item.Images.FirstOrDefault(x => x.IsMain == true).UrlImage" alt="Product 1" class="img-fluid product-image" /></td>
                    <td>@item.Price?.ToString("N0") VNĐ</td>
                   <td>@item.ProductCategory.Name</td>
                    <td>@item.Sales</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-xs btn-action">
                                <a method="get" asp-action="EditProduct" asp-route-IdProduct="@item.Id" class="text-white">Sửa</a>
                            </button>
                            <form method="post" asp-action="ChangeStatusProduct" class="d-inline-block">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <input type="hidden" name="status" value="@(item.Status == 1 ? 0 : 1)" />
                                <button type="submit" class="btn @(item.Status == 1 ? "btn-warning" : "btn-success") btn-xs btn-action">
                                    @(item.Status == 1 ? "Tắt" : "Bật")
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="@(i == ViewBag.CurrentPage ? "active" : "")">
                    <a href="@Url.Action("ProductControl", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>

    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Thông tin sản phẩm</h4>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>
